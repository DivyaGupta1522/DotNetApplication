<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - QuickService</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/Grid.css" rel="stylesheet" />
    <style type="text/css">
        body{
            background-color:#C9D7E0;
        }
        .Grid thead a{
            color:antiquewhite;
        }
        .Grid thead a:hover{
            color:lightblue;
        }
        .text-box{
            background-color:antiquewhite;
            color:maroon;
        }
        h2{
            text-align:center;
        }
        .logo {
	        color:#CCC;
        }
        .option{
            padding-bottom: 3px; 
            margin: unset; 
            border-bottom: unset; 
            padding-top: 15px;
            padding-left: 20px;
            padding-right:10px;
        }
        .page-header {
            padding-bottom: 3px; 
            margin: unset; 
            border-bottom: unset; 
        }
        .page-header a{
            color:lightblue; 
        }
        .page-header a:hover{
            color:lightseagreen;
            text-decoration: none;
        }

        #request-dp{
            min-width: 250px;
            padding: 14px 14px 0;
            overflow:hidden;
            background-color:rgba(255,255,255,.8);
        }
        #request-dp .help-block{
            font-size:12px    
        }
        #request-dp .bottom{
            background-color:rgba(255,255,255,.8);
            border-top:1px solid #ddd;
            clear:both;
            padding:14px;
        }
        #footer {
          position: fixed;
          bottom: 0;
          width: 100%;
          height:35px;
          background-color: #355667;
          text-align: center;
        }
        
    </style>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript">


        function postOnFacebook() {
            //copy the logic app end point and paste it here
            var url = '[logic app end point]';
            var method = "POST";
            var request = new XMLHttpRequest();
            var async = true;
            request.open(method, url, async);
            request.setRequestHeader("Accept-Language", "en-us", "charset", "utf-8", 'Content-Type', 'application/json');
            request.send(JSON.stringify({}));
            request.onload = function () {
                alert("request submitted");
            }
        }

        </script>
</head>
<body>



        <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#307B94;">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <div class="page-header">
                        <h2 class="logo"><a href="@Url.Action("CreateRequest", "Customer")">Quick Service </a></h2>
                    </div>
                   
                </div>
                <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="option"><h4 class="logo"><a href="@Url.Action("GetMyRequests", "Customer")">Requests </a></h4></li>
                        </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            @if (Session["LoginId"] != null)
                            {
                                @Html.ActionLink("Log Out", "LogOut", "Login", new { area = "" }, new { @class = "navbar-brand navbar-right" });
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>


       <div class="container body-content">
           <br />
           <br />
              @RenderBody()
              @RenderSection("scripts", required: false)

            <br />

           <footer class="navbar navbar-fixed-bottom navbar-light bg-faded" id="footer">
               <br />

               @*uncomment the following input tag*@
               @*<input type="image" src="~/Resources/share-on-facebook.png" name="postOnFb" id="postOnFb" onclick="postOnFacebook()" height="40" width="150" />*@
               
               <p>&copy; @DateTime.Now.Year - QuickService</p>            
           </footer>

       </div>


        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
       <style type="text/css">
           .navbar-brand,.nav-defined-by-us{
                color:#959B9D !important;
            }
           .navbar-brand:hover,.nav-defined-by-us:hover{
               color:yellowgreen !important;
           }
       </style>

</body>
</html>