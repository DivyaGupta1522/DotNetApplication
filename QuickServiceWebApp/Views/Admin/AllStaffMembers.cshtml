@model IEnumerable<QuickServiceWebApp.Models.StaffDetail>

@{
    ViewBag.Title = "AllStaffMembers";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h2>All Staff Members</h2>

<p>
    @Html.ActionLink("Create New Staff", "AddStaff")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StaffId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StaffName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobAssigned)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StaffId)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.StaffName)
        </td>
    
        <td>
            @Html.DisplayFor(modelItem => item.JobAssigned)
        </td>
        <td>
           |
            @Html.ActionLink("Delete", "RemoveStaff", item)
        </td>
    </tr>
}

</table>
